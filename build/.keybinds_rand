;;; Joe Jevnik
;;; 2014.3.13
;;; Keybinding layout for the robot.

;; Defining symbolic names to the axis and trigger.
(define trigger (button 1))
(define x-axis  (axis   0))
(define y-axis  (axis   1))
(define twist   (axis   2))
(define slider  (axis   3))
(define hat-x   (axis   4))
(define hat-y   (axis   5))

;; Assigning operations to their keys.
;; To create an axis out of two buttons, use the (pair a b) command.
(claw-open  (button 7))
(claw-close (button 3))
(rotate-x   hat-y)
(rotate-y   (axis-pair 1 2))
(transpose  hat-x)
(turn       y-axis)
(thrust-mod x-axis)
